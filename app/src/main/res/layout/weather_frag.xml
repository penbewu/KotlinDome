<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    >
    <TextView
        android:id="@+id/weather_tex"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/pub_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/degrees_tex"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/pub_text"
        android:textSize="16sp"
        android:drawableTop="@drawable/w5"
        android:drawablePadding="3dp"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/temperature_tex"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/pub_text"
            android:textSize="16sp"
            android:drawableTop="@drawable/w4"
            android:drawablePadding="3dp"
            android:textColor="@android:color/white"
            />


        <TextView
            android:id="@+id/wind_direction_tex"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/pub_text"
            android:textSize="16sp"
            android:drawableTop="@drawable/w2"
            android:drawablePadding="3dp"
            android:textColor="@android:color/white"
            />


        <TextView
            android:id="@+id/wind_power_tex"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/pub_text"
            android:textSize="16sp"
            android:drawableTop="@drawable/w3"
            android:drawablePadding="3dp"
            />


        <TextView
            android:id="@+id/quality_tex"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/pub_text"
            android:textSize="16sp"
            android:drawableTop="@drawable/w1"
            android:drawablePadding="3dp"
            />


    </LinearLayout>




</LinearLayout>
